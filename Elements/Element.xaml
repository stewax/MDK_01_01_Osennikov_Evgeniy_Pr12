<UserControl x:Class="Book_Osennikov.Elements.Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Book_Osennikov.Elements"
             mc:Ignorable="d">
    <Grid Height="100" Background="#FF6AADED" Margin="0,0,0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="tbName" Text="Название: тут тут тут" 
                   Margin="10,10,10,0" VerticalAlignment="Top"
                   Foreground="White" FontWeight="Bold" Grid.ColumnSpan="2"/>

        <TextBlock x:Name="tbGenre" Text="Жанр: бла бла бла бла бла бла бла бла бла бла бла" 
                   Margin="10,36,10,10" Foreground="White" TextWrapping="Wrap" Grid.Column="0"/>

        <TextBlock x:Name="tbAuthor" Text="Автор: бла бла бла бла бла бла бла бла бла бла" 
                   Margin="10,36,10,10" Foreground="White" TextWrapping="Wrap" Grid.Column="1"/>
    </Grid>
</UserControl>
